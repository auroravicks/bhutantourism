<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".booking">

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="640sp"
        android:layout_centerInParent="true"
        android:background="@color/b_white"
        tools:ignore="UselessParent">

        <EditText
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/name"
            />

        <EditText
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:hint="E-mail id"
            android:layout_below="@id/name"
            android:layout_marginTop="05sp"
            android:layout_marginLeft="20sp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:id="@+id/email"
            />

        <EditText
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:layout_below="@id/email"
            android:layout_marginTop="05sp"
            android:layout_marginLeft="20sp"
            android:inputType="number"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:id="@+id/phone"
            />

        <EditText
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:hint="Length of stay in days"
            android:layout_below="@id/phone"
            android:layout_marginTop="05sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/days"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:inputType="number"
            />
        <TextView
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/days"
            android:layout_marginTop="75sp"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="We will be providing you with 4 star accommodations at a minimum, and all travel will also be arranged by our agent. \nPlease contact customer care for further details"
            />
        <TextView
            android:layout_width="248sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/days"
            android:layout_marginTop="250sp"
            android:layout_marginLeft="20sp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="We will confirm the other details of your stay with you on phone or mail. \nOnly correspond with calls from 5558756245 and mails from visit.bhutan@gmail.com.  "
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/days"
            android:text="Submit"
            android:textColor="@color/white"
            android:onClick="submit"
            android:layout_marginTop="15sp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reg. Government of Bhutan"
        android:textColor="@color/b_white"
        android:layout_marginBottom="12sp"
        />
</RelativeLayout>